{
    "name": "decimal/minimal-php-sdk",
    "description": "Минимальный PHP SDK для работы с блокчейном Decimal",
    "type": "library",
    "version": "1.0.0",
    "authors": [
        {
            "name": "Maxwell2019"
        }
    ],
    "require": {
        "php": ">=7.4",
        "kornrunner/secp256k1": "^0.1.5",
        "web3p/ethereum-tx": "^0.4.0",
        "web3p/web3.php": "^0.2.0",
        "bip39/bip39": "^1.0.0",
        "kornrunner/keccak": "^2.0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Decimal\\MinimalSdk\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Decimal\\MinimalSdk\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable"
}
